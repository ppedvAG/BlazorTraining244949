@page "/r"
@using Models
@inject NorthwindContext db
<h3>UseRepeater</h3>
<table class="table">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>CompanyName</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var c in lade())
        {
            <tr>
                <td>@c.CustomerId</td>
                <td>@c.CompanyName</td>
               
            </tr>
        }
        <Repeater ModelType="Customer" Context="item" SelectMethod="lade">
            <ItemTemplate>
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CompanyName</td>
                </tr>
            </ItemTemplate>
            <EmptyItemTemplate>
                <tr>
                    <td colspan="2">Keine Daten vorhanden</td>
                </tr>
            </EmptyItemTemplate>
        </Repeater>

    </tbody>
</table>

@code {
    List<Customer> lade()
    => db.Customers.ToList();
}
