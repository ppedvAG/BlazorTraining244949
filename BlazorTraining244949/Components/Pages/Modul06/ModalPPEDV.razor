@if (isVisible)
{
    <div class="modal fade show"  tabindex="-1"  role="dialog" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title fs-5" >@Titel</h3>
                    <button type="button" class="btn-close" @onclick="Show"></button>
                </div>
                <div class="modal-body">
                   @ChildContent
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Show">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="()=>OnClick.InvokeAsync()">
                        Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show" @onclick="Show"></div>
}

@code {
    bool isVisible;
    [Parameter]
    public string Titel { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; } //Konvention
    [Parameter]
    public EventCallback OnClick { get; set; }
    public void Show()
    {
        isVisible = !isVisible;
        StateHasChanged();
    }

}
