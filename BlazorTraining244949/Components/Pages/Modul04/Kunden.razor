@page "/db"
@using Models
@inject NorthwindContext VM
<h3>Kunden</h3>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="suche" @bind="eingabe" >
                <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i> search</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active">Kunden</li>

                @foreach (var item in VM.Customers.Where(x=>x.CompanyName.Contains(eingabe)))
                {
                    <li class="list-group-item  " @key="@item.CustomerId">
                       @item.CustomerId @item.CompanyName 
                    </li>
                }
            </ul>
        </div>

    </div>
</div>

@code {
    string eingabe = "";
}
